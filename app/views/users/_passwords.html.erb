<fieldset class="form-group">
  <%= f.label :password %>
  <%= password_field(:user, :password, placeholder: "Sshhh. It's a secret.", class: 'form-control', required: true) %>
</fieldset>

<fieldset class="form-group">
  <%= f.label :password_confirmation, "Confirm password" %>
  <%= password_field(:user, :password_confirmation, placeholder: "Repeat, please.", class: 'form-control', required: true) %>
</fieldset>
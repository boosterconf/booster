<article>
<h2>Register a skeleton user</h2>

<%= render "shared/notice" %>

<p>
  No fields except ticket type are mandatory. The rest will be registered when the user click the link.
</p>

<%= form_for @user, :url => create_skeleton_user_path do |f| %>
  <fieldset class="form-group">
    <%= f.label :first_name, "First name" %>
    <%= text_field(:user, :first_name, class: 'form-control') %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :last_name, "Last name" %>
    <%= text_field(:user, :last_name, class: 'form-control') %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :company, "Company" %>
    <%= text_field(:user, :company, class: 'form-control') %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :email %>
    <%= email_field(:user, :email, class: 'form-control') %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :phone_number, "Phone" %>
    <%= text_field(:user, :phone_number, class: 'form-control') %>
  </fieldset>

  <fieldset class="form-group">
      <%= f.fields_for :registration do |reg| %>
          <%= reg.label :ticket_type_old, "Ticket type" %>
          <%= reg.select :ticket_type_old, [
                  ['Partner ticket', 'sponsor'],
                  ['Volunteer', 'volunteer'],
                  ['Reviewer', 'reviewer'],
                  ['Organizer', 'organizer'],
                  ['Student', 'student'],
                  ['Academic', 'academic'],
                  ['One-day', 'one_day']
          ], {}, { class: 'form-control' } %>
      <% end %>
  </fieldset>
    <%= f.submit "Create!", :class => "btn btn-primary" %>
<% end %>
</article>

<%= f.fields_for :bio do |bio| %>
    <div>
      <div>
        <% if admin? %>
          <div class="form-group">
            <%= f.check_box :featured_speaker %>
            <%= f.label :featured_speaker, "Feature this user on front page" %>
          </div>
          <div class="form-group">
            <%= f.check_box :feature_as_organizer %>
            <%= f.label :feature_as_organizer, "Feature this user on organizers page" %>
          </div>
        <% end %>
      </div>

      <div>
        <% if @user.bio.picture_file_name.present? %>
            <%= image_tag @user.bio.picture.url %>
        <% else %>
            <%= image_tag('placeholder.jpg') %>
        <% end %>
      </div>
      <div class="pull-right">
        <%= bio.file_field :picture %>
        <% if show_warning %>
          <p>
            We recommend only uploading square photos of at least 400 by 400 pixels for best results
          </p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= bio.label :title, "Work title:" %>
      <%= bio.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= bio.label :twitter_handle, "Twitter handle:" %>
      <%= bio.text_field :twitter_handle, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= bio.label :blog, "Blog url" %>
      <%= bio.text_field :blog, class: 'form-control' %>
    </div>
    <div class="form-group">
    <%= bio.label :bio, "Bio" %>
    <%= bio.text_area :bio, :rows => 13, :class => 'form-control' %>
    </div>
<% end %>

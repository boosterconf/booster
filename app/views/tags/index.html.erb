<article class="inner">
  <div class="header-join">
<h2>Listing tag</h2>
</div>

<table class="table table-striped">
  <tr>
    <th>Title</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%=h tag.title %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag', new_tag_path %>

</article>

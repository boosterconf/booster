<article class="inner">
  <div class="header-join">
<h2>Editing tag</h2>
</div>

<% form_for(@tag) do |f| %>
    <% if @tag.errors %>
        <ul>
          <% @tag.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @tag %> |
<%= link_to 'Back', tags_path %>
</article>

<% content_for :pre_content do %>
<div class="rocket">

  <div class="middle-of-image">
    <span class="font-page-conference-dates">9th - 11th March</span>
    <%= image_tag "icons/rocket.svg", class: "rocket-image" %>
    <span class="front-page-location">Bergen, Norway</span>
  </div>

  <h1 class="rocket-title">The software conference for the whole team</h1>

</div>
<% end %>

<div class="calltoaction">
  <span>
    <!-- We're accepting ideas for lightning talks and workshops until 15th November. -->
    Early bird registration is now open!
  </span>
  <a class="btn btn-info" href="/info/tickets">Get your ticket</a>
</div>
<%= render partial: 'frontpage_element', locals: {
    headline: "Workshops",
    path_to_image: "/assets/workshops.jpg",
    text: "We strongly believe in learning by doing. Join a workshop and bring back practical knowledge to your workplace."
    } %>

<%= render partial: 'frontpage_element', locals: {
    headline: "Lightning talks",
    path_to_image: "/assets/talk.jpg",
    text: "Lightning talks are fast-paced 10-minute talks about all the latest trends, buzzwords and more."
    } %>

<%= render partial: 'frontpage_element', locals: {
    headline: "Short talks",
    path_to_image: "/assets/short_talk.jpg",
    text: "Short talks are 30-minute talks meant to give you a deeper understanding of a subject and acts as a supplement for our lightning talks."
    } %>

<%= render partial: 'frontpage_element', locals: {
    headline: "Open spaces",
    path_to_image: "/assets/open_spaces.jpg",
    text: "Text goes here"
    } %>

<div class="imagetron">
  <div class="imagetron-bg" style='background-image: url("/images/bergen1920.jpg")'>
    <%= image_tag '/images/bergen1920.jpg', class: 'img-superfluid' %>
  </div>
  <div class="container imagetron-text-over-background">
    <h2>Beautiful city of Bergen</h2>

    <p>Bergen is pretty awesome, okay?</p>
  </div>
</div>

<div class="jumbotron m-b-0">
  <div class="container text-xs-center">
    <h2>Super amazing speakers!</h2>

    <p>Our speakers come from all over the world to teach, learn and delight.</p>

    <p class="lead">
      <%= link_to "View all", info_speakers_path %>
    </p>
  </div>
</div>

<div class="quad-list container-fluid">
  <div class="quad-list-big hidden-md-down">
    <div class="row">
      <% @speakers.+(@speakers).each do |speaker| %>
      <div class="col-xs-3">
	<%= image_tag speaker.bio.picture.url, class: "img-superfluid" %>
      </div>
      <% end %>
    </div>

    <div class="row">
      <% @speakers.+(@speakers).each do |speaker| %>
      <div class="col-xs-3 minor-block-body">
	<div class="minor-block-body-inner">
          <h2><%= speaker.full_name %></h2>

          <p class="lead"><%= speaker.bio.title %></p>
	</div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="quad-list-small hidden-lg-up">
    <div class="row">
      <% @speakers.+(@speakers).each do |speaker| %>
      <div class="col-xs-3">
	<%= image_tag speaker.bio.picture.url, class: "img-superfluid" %>
      </div>

      <div class="col-xs-9 minor-block-body">
	<div class="minor-block-body-inner">
          <h2><%= speaker.full_name %></h2>

          <p class="lead"><%= speaker.bio.title %></p>
	</div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="imagetron">
  <div class="imagetron-bg"  style='background: url("/images/bergen1920.jpg")'>
    <%= image_tag '/images/bergen1920.jpg', class: 'img-superfluid' %>
  </div>
  <div class="container imagetron-text-over-background">
    <%= image_tag '/images/barista.jpg', class: 'imagetron-img' %>
    <h2>Our very own barista</h2>

    <p>
      Year after year Vidar Graawe Farland provide the Booster delegates with the 
      best coffee Bergen has to offer for free. Why? &laquo;I keep coming back, 
      simply because it's loads of fun!&raquo;
      </p>
  </div>
</div>

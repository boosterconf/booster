<article class="inner group">
  <div class="header-join">
    <h2>Organizing committee</h2>
  </div>


  <p class="clearfix">
    Meet the people behind the Booster Conference!
  </p>


  <% for organizer in @organizers do %>

      <div class="person">
        <div class="scale-down">
            <%= image_tag organizer.bio.picture.url, alt: organizer.full_name, class: 'img-polaroid', onerror: "this.src = '/assets/placeholder.jpg';" %>
        </div>
        <div class="info">
          <div class="name"><%= organizer.full_name %></div>
          <div class="twitter_handle">
            <% if not organizer.bio.twitter_handle.blank? %>
                <a href="http://twitter.com/<%= organizer.bio.twitter_handle %>" title="Twitter" target="_blank">
                  &#64;<%= organizer.bio.twitter_handle %>
                </a>
            <% else %>
                <br/>
            <% end %>
          </div>
          <div class="company"><%= organizer.company %></div>
        </div>
      </div>

  <% end %>


</article>

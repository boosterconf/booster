<article class="inner">
<h1>Create invited short talk</h1>

<%= form_for @talk, url: "/register_short_talk/invited_talk" do |f| %>
<p>
<label for="notify_speaker">Notify speaker</label>
<%= check_box_tag(:notify_speaker) %>
</p>
<p>
<label for="talk_user_ids">Speakers</label>
<%= f.select :user_ids, User.all.sort_by(&:full_name).map {|u| [u.full_name, u.id]}, {}, {:multiple => true} %>
</p>
<%= render partial: 'form_fields', locals: { f: f } %>

<% end %>

</article>

<article class="inner">
<h1>Create invited lightning talk</h1>

<%= form_for @talk, url: "/register_lightning_talk/invited_talk" do |f| %>
<p>
<label for="notify_speaker">Notify speaker</label>
<%= check_box_tag(:notify_speaker) %>
</p>
<%= f.select :user_ids, User.all.map {|u| [u.full_name, u.id]}, {}, {:multiple => true} %>
<%= render partial: 'form_fields', locals: { f: f } %>

<% end %>

</article>

<article class="inner">
  <div class="header-join">
<h2 class="page_title">Edit your workshop</h2>
</div>
<% @workshop = @talk %>

<% if @talk.accepted? %>
  <% if @talk.slide_file_name.present? %>
      <h4>Presentation slides</h4>
      <p>
        <%= link_to image_tag("icon_slides.gif"), @talk.slide.url %>
        <%= link_to "Download", @talk.slide.url %>
      </p>
  <% end %>
  <h4>Upload tutorial slides</h4>
  <%= render :partial => 'upload_slide' %>
  <br />
<% end %>
<%= render partial: 'register_workshop/workshop_form', locals: { post_to: talk_url(@talk) } %>

</article>

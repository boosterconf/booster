<article class="inner">
    <% content_for :title, "Accepted sessions" %>
<div class="header-join">
    <h2 class="page_title">
      Accepted talks
    </h2>
</div>

    <p>
      <a href="#lightning"> Go to lightning talks</a> | <a href="#short">Go to short talks</a> | <%= link_to 'All proposals', talks_url %>
    </p>

        <p>These are the currently accepted sessions. This list is subject to change.</p>

    <% unless @workshops.empty? %>
        <h3 id="workshops">Workshops</h3>
        <%= render partial: @workshops %>
    <% end %>

    <% unless @short_talks.empty? %>
        <h3 id="short">Short talks</h3>
        <%= render partial: @short_talks %>
    <% end %>

    <% unless @lightning_talks.empty? %>
        <h3 id="lightning">Lightning talks</h3>
        <%= render partial: @lightning_talks %>
    <% end %>

</article>

<article class="inner">
  <div class="header-join">
    <h2>New ticket type</h2>
  </div>
  <%= form_for(@ticket_type) do |f| %>
      <% if @ticket_type.errors %>
          <ul>
            <% @ticket_type.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
      <% end %>

      <div class="form-group">
        <%= f.label :reference %>
        <%= f.text_field :reference, :class => "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, :class => "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Create', :class => "btn btn-primary" %>
        <%= link_to 'Back', ticket_types_path, :class => "btn btn-default" %>
      </div>
  <% end %>
  <div class="form-actions">

  </div>

</article>
